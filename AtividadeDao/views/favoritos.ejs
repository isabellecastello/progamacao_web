<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favoritos - Arte em Crochê</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1 class="logo">Arte em Crochê</h1>
            <nav class="nav">
                <ul>
                    <li><a href="/">Início</a></li>
                    <li><a href="/tutoriais">Tutoriais</a></li>
                    <li><a href="/padroes">Padrões</a></li>
                    <li><a href="/contato">Contato</a></li>
                    <li><a href="/tutoriais/favoritos">Favoritos</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <section class="tutorials">
        <div class="container">
            <h2 class="section-title">Tutoriais Favoritos</h2>
            <div class="tutorial-list">
                <% if (tutoriais.length === 0) { %>
                    <p>Nenhum tutorial foi marcado como favorito.</p>
                <% } else { %>
                    <% tutoriais.forEach(tutorial => { %>
                        <div class="tutorial-card">
                            <img src="<%= tutorial.imagem %>" alt="<%= tutorial.titulo %>" class="imagem-pequena">
                            <h3><%= tutorial.titulo %></h3>
                            <p><%= tutorial.descricao %></p>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="container">
            <p>© 2023 Arte em Crochê. Todos os direitos reservados.</p>
        </div>
    </footer>
</body>
</html>
